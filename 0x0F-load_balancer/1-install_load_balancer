#!/usr/bin/env bash
# Configure HAProxy load balancer server

sudo apt-get -y install software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy
sudo apt-get -y update
sudo apt-get -y install haproxy
sudo echo "frontend http
        bind *:541
        mode http
        default_backend web-backend
    backend web-backend
        balance roundrobin
        server 29305-web-01 3.229.124.209
        server 29305-web-02 3.236.114.249" >> sudo tee --append /etc/haproxy/haproxy.cfg

sudo service haproxy restart
